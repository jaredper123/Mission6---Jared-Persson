@{
    ViewData["Title"] = "Movie Entry";
}

@model Mission6.Models.Movie

<h1>This is a page for the movie collection</h1>
@* This is where the form starts, and it gives options for those things that make sense. It uses razor code to route it all. *@
<div>
    <form method="post">
        <input type="hidden" asp-for="movieID" />
        <div asp-validation-summary="All"></div>
        <label asp-for="CategoryID" class="col-form-label">Category: </label>
        <br />
        <select asp-for="CategoryID" class="form-check-input">
            <option value="">Select a Category</option>
            @*This is reading in every entry of the other table, so that only one database needs to  be updated, and the pages follow.*@
            @foreach (Category c in ViewBag.stuff)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
            @*<option value="1">Action/Adventure</option>
            <option value="2">Comedy</option>
            <option value="3">Drama</option>
            <option value="4">Family</option>
            <option value="5">Horror/Suspense</option>
            <option value="6">Miscellaneous</option>
            <option value="7">Television</option>
            <option value="8">VHS</option>*@

        </select>
        <br />
        <label asp-for="Title" class="col-form-label">Movie Title: </label>
        <input asp-for="Title"  class="input-group-text"/>
        <br />
        <label asp-for="Year" class="col-form-label">Year: </label>
        <input asp-for="Year"  class="input-group-text"/>
        <br />
        <label asp-for="Director" class="col-form-label">Director: </label>
        <br />
        <input asp-for="Director" />
        <br />
        <label asp-for="Rating" class="col-form-label">Rating: </label>
        <select asp-for="Rating" class="input-group-text">
            <option value="">Select A Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="Unrated">Unrated</option>

        </select>
        <br />
        <label asp-for="Edited" class="col-form-label">Edited: </label>
        <select asp-for="Edited" class="input-group-text">

            <option value="true">Yes</option>
            <option value="false">No</option>

        </select>
        <br />
        <label asp-for="LentTo" class="col-form-label">Lent To: </label>
        <input asp-for="LentTo"  class="input-group-text"/>
        <br />
        <label asp-for="Notes" class="col-form-label">Notes: </label>
        <input asp-for="Notes"  class="input-group-text"/>
        <br />
        <button type="submit" class="btn-block">Enter Movie In</button>
    </form>
</div>